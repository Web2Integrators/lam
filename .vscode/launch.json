{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Node server",
      "program": "${workspaceFolder}/pde/dist/server/src/app.js"
    },

    {
      "name": "Launch Protractor",
      "type": "node",
      "request": "launch",
      "cwd":"${workspaceRoot}/client",
      "program": "${workspaceRoot}/client/node_modules/protractor/bin/protractor",
      "stopOnEntry": false,
      "args": ["${workspaceRoot}/client/protractor.conf.js", "--suite", "full"],
      "preLaunchTask": null,
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome/EWF",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/apps/expresswaferflow",
      "sourceMaps": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome/PDE Devmode",
      "url": "http://localhost:8080/devMode/PM3",
      "webRoot": "${workspaceFolder}/client",
      "sourceMaps": true
    },
    {
      "name": "debug-jest-lib",
       "type": "node",
       "request": "launch",
       "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng",
       "args": [
         "test",
         "session-manager",
         "--codeCoverage=false",
        "--testFile=${workspaceFolder}/libs/session-manager/src/lib/services/connection.service.spec.ts"
       ],
       "cwd": "${workspaceFolder}",
       "console": "internalConsole"
     },
     {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "args": [
        "test",
        "--passWithNoTests",
        "--no-code-coverage",
        "--runInBand",
        "--testFile=${workspaceFolder}/libs/session-manager/src/lib/services/connection.service.spec.ts"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng"
    },
    {
      "name": "Debug Jest Testszzz",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng",
      "args": [
        "test",
        "${input:libName}",
        "--runInBand=true",
        "--codeCoverage=false"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "trace": "all"
    },

  ],
  "inputs": [
    // these options come from the names of your libraries as enumerated in nx.json..i manually put them in the pick list
    {
      "type": "pickString",
      "id": "libName",
      "description": "Which nx project to run jest tests to debug?",
      "options": [
        "session-manager"
      ],
      "default": "session-manager"
    }
  ]
}
